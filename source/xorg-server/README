$ CFLAGS='-O0 -g3' ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib --localstatedir=/var --infodir=/usr/share/info --mandir=/usr/share/man --with-fontdir=/usr/share/fonts/X11/ --enable-xselinux
